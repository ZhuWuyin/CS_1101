#|=----expenses-----|#
;; expenses: Number --> Number

;; consumes the number of chaperones and the number of students at an event
;; and produces the cost to the zoo to conduct the tour

(define (expenses chaperon student)
        (* (+ chaperon student) 102))

;;-------TEST-------;;
(check-expect (expenses 10 10) 2040)
(check-expect (expenses 1 1) 204)

#|=-----income------|#
;; income: Number --> Number

;; consumes the number of chaperones and the number of students
;; and the price per ticket and produces the monies generated by ticket sales

(define (income chaperon student ticketPrice)
        (* (+ chaperon student) ticketPrice))

;;-------TEST-------;;
(check-expect (income 10 10 200) 4000)
(check-expect (income 1 1 200) 400)

#|=----proceeds-----|#
;; proceeds: Number --> Number

;; consumes the number of attendees and the price per ticket
;; and produces the profit for the event

(define (proceeds attendees ticketPrice)
        (- (* attendees ticketPrice) (* attendees 102)))

;;-------TEST-------;;
(define (proceedsTest attendees ticketPrice)
        (- (income (/ attendees 2) (/ attendees 2) ticketPrice) (expenses (/ attendees 2) (/ attendees 2))))

(check-expect (proceeds 20 200) 1960)
(check-expect (proceeds 2 200) 196)
(check-expect (proceeds 20 200) (proceedsTest 20 200))
(check-expect (proceeds 2 200) (proceedsTest 2 200))

