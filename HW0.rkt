; Constants
(define rate 0.04)
(define time 15)
(define fees 3000)

#|=-----amount------|#
;; amount: Number --> Number

;; consumes the purchase price of a house and the amount of the down-payment
;; and produces the principal(Helper Func)

(define (amount housePrice downPayment) (- housePrice downPayment))

;;-------TEST-------;;
(check-expect (amount 2000 1000) 1000)
(check-expect (amount 20 10) 10)

#|=----interest-----|#
;; interest: Number --> Number

;; consumes the purchase price of a house and the amount of the down-payment
;; and produce the interest(Helper Func)

(define (interest housePrice downPayment)
        (* rate (- housePrice downPayment) time))

;;-------TEST-------;;
(check-expect (interest 2000 1000) 600)
(check-expect (interest 20 10) 6)

#|=total-cost-of-house|#
;; total-cost-of-house: Number --> Number

;; consumes the purchase price of a house and the amount of the down-payment
;; and produces the grand total paid by the buyer for the house

(define (total-cost-of-house housePrice downPayment)
        (+ (interest housePrice downPayment) fees housePrice))

;;-------TEST-------;;
(check-expect (total-cost-of-house 2000 1000) 5600)
(check-expect (total-cost-of-house 20 10) 3026)